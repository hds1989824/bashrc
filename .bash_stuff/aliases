alias ll='ls -lh'
alias lal='ls -Alh'
alias l.='ls .[A-Za-z]*'
alias la='ls -CF -A'
alias dir='ls --color=auto --format=vertical'
alias vdir='ls --color=auto --format=long'
alias lc='ls *.cpp'

